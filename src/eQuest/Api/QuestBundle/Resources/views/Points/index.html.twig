{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Points list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Details</th>
                <th>X</th>
                <th>Y</th>
                <th>Map_id</th>
                <th>Type</th>
                <th>Qr_code</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_points__show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.details }}</td>
                <td>{{ entity.x }}</td>
                <td>{{ entity.y }}</td>
                <td>{{ entity.mapid }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.qrcode }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_points__show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_points__edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_points__new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
