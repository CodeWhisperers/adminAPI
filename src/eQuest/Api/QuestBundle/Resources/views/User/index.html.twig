{% extends '::base.html.twig' %}

{% block body -%}
    <h1>User list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Domain</th>
                <th>Avatar</th>
                <th>Status</th>
                <th>Type</th>
                <th>T_xp</th>
                <th>Activ_quest_id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_user__show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.domain }}</td>
                <td>{{ entity.avatar }}</td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.txp }}</td>
                <td>{{ entity.activquestid }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_user__show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_user__edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_user__new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
